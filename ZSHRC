# MacOSX cd special
if [[ "$(uname)" == "Darwin" ]]; then
function cd {
  if [ ${#1} = 0 ]; then
    builtin cd
  elif [ -d "${1}" ]; then
    builtin cd "${1}"
  elif [[ -f "${1}" || -L "${1}" ]]; then
    abspath=$(getTrueName "$1")
    builtin cd "$abspath"
  else
    builtin cd "${1}"
  fi
}
AICCU_DIR=/usr/local/Cellar/aiccu/20070115/sbin
fi

function edit {
   vim "{1}"
}

if hascom gedit ; then
else
  function gedit {
    open -a "Sublime Text 2" "$@"
  }
fi

function gacp {
   git add . && git commit -m "${1}" && git push
}

function createtext {
  touch "${1}" && gedit "${1}"
}
